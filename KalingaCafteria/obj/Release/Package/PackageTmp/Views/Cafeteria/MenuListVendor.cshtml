
@model IEnumerable<KalingaCafteria.Models.MenuModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MenuListV for Vendor</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url("../../Photo/menu1.jpg");
            background-repeat: no-repeat;
            background-origin: padding-box;
            background-size: cover;
        }

        h1 {
            text-align: center;
            text-transform: capitalize;
            color: rgb(87, 60, 52);
            text-shadow: 2px 1px grey;
            font-style: italic;
            font-size: 60px;
            font-weight: bold;
            position: relative;
            top: 0px;
        }

        .home {
            position: absolute;
            top: 8px;
            right: 16px;
            background-color: rgb(87, 60, 52);
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .home1 {
            position: absolute;
            top: 8px;
            right: 180px;
            background-color: rgb(87, 60, 52);
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        /*.menu1 {
            position: absolute;
            top: 20%;
            right: 40%;
        }*/
        .div1 {
            color: white;
        }

        .card-deck {
            background-color: rgb(177, 149, 26);
        }

        .card-body {
            background-color: rgb(92, 56, 22);
        }
    </style>
</head>
<body>
    <h1>Menu</h1>
    <div>
        <input type="button" value="Home Page" class="home" onclick="@("window.location.href='" + @Url.Action("HomePage", "Cafeteria") + "'");" />
    </div>
    <div class="div1">
        <div class="container">
            <div class="card-deck">
                @{
                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            @*<div class="card-columns">*@
                            <div class="card bg-success" align="center">
                                <div class="card-body text-center">

                                    <p class="card-text">@Html.DisplayNameFor(model => model.CounterID):&emsp;@Html.DisplayFor(modelItem => item.CounterID)</p>
                                    <p class="card-text">@Html.DisplayNameFor(model => model.ItemId):&emsp;@Html.DisplayFor(modelItem => item.ItemId)</p>
                                    <p class="card-text">@Html.DisplayNameFor(model => model.ItemName):&emsp;@Html.DisplayFor(modelItem => item.ItemName)</p>
                                    <p class="card-text">@Html.DisplayNameFor(model => model.Itemdescription):&emsp;@Html.DisplayFor(modelItem => item.Itemdescription)</p>
                                    <p class="card-text">@Html.DisplayNameFor(model => model.Price):&emsp;@Html.DisplayFor(modelItem => item.Price)</p>


                                </div>
                            </div>

                            @*</div>*@
                        }
                    }
                    else
                    {
                        <p>It is recomended to add dishes in your counter</p>
                    }
                }

            </div>
        </div>
       
        <div>
            <center>
                <input type="button" value="Add Menu" onclick="@("window.location.href='" + @Url.Action("VendorMenuList", "Cafeteria") + "'");" />
            </center>
        </div><br />

            <div>
                <center>
                    <input type="button" value="Delete Menu" onclick="@("window.location.href='" + @Url.Action("DeleteMenuDet", "Cafeteria") + "'");" />
                </center>
            </div>
    
    </div>
        
    <div>
        <input type="button" value="LogOut" class="home1" onclick="@("window.location.href='" + @Url.Action("Logout", "Cafeteria") + "'");" />
    </div>

</body>
</html>
