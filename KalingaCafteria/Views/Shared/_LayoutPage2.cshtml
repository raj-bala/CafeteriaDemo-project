                    <li><a href="/Cafeteria/Contact">Contact</a></li>
                   
                </ul>
            </div>
           
        </div>
        <div class="container-fluid">
            @RenderBody()
        </div>
        <div class="container body-content">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My Cafeteria</p>
            </footer>
        </div>
