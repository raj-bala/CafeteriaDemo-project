@model KalingaCafteria.Models.UsersModel
@{
    ViewBag.Title = "UserSignUp";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserSignUp</title>
    <style>
        body {
            
            background-color: black;
            background: url("../../Photo/user2.jpg") no-repeat center center fixed;
            background-size: cover;
            color: black;
            position: absolute;
            left: 20%;
            font-family: Arial;
            font-size: 10pt;
        }

        .error {
            color: red;
        }

        h2 {
            color: brown;
        }
        img{
            position:absolute;
            left:18%;
            top:12%;
        }
        .msg1 {
            background-color: forestgreen;
            border: none;
            color: white;
            padding: 9px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 10px;
            margin: 4px 2px;
        }

        .msg2 {
            background-color: firebrick;
            border: none;
            color: white;
            padding: 9px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 10px;
            margin: 4px 2px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#vname').change(function () {
                if ($('#vname').val() == " " || $('#vname').val() == "") {
                    //alert('Please complete the field');
                    $("#hide1").text("This cannot be blank!");
                    $("#submit1").attr("disabled", true);
                }
                else {
                    $("#hide1").text("");
                    $("#submit1").attr("disabled", false);
                }
            });


            $('#email').change(function () {
                var input = $('#email').val();

                var re = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;
                var is_email = re.test(input);
                if ($('#email').val() == " " || $('#email').val() == "" || is_email == false) {
                    //alert('Please complete the field');
                    $("#hide4").text("Enter valid email id!");
                    $("#submit1").attr("disabled", true);
                }

                else {
                    $("#hide4").text("");
                    $("#submit1").attr("disabled", false);
                }
            });
            $('#cno').change(function () {
                var filter = /^[0-9-+]+$/;
                if ($('#cno').val() == " " || $('#cno').val() == "" || filter.test($('#cno')) || $('#cno').val().length !== 10) {
                    //alert('Please complete the field');
                    $("#hide5").text("Enter valid phone number!");
                    $("#submit1").attr("disabled", true);
                }
                else {
                    $("#hide5").text("");
                    $("#submit1").attr("disabled", false);
                }
            });
            $("#password1").keyup(validates);
            function validates() {
                var password1 = $("#password1").val();




                if (password1 == "" || password1 == " ") {
                    $("#validate-status1").text("Invalid");
                }
                else if (password1.length < 5) {
                    $("#validate-status1").text("Invalid");
                }
                else {
                    $("#validate-status1").text("Valid");
                }

            }
            $("#password2").keyup(validate);
            function validate() {
                var password1 = $("#password1").val();
                var password2 = $("#password2").val();



                if (password1 == password2) {
                    $("#validate-status").text("valid");
                }
                else {
                    $("#validate-status").text("invalid");
                }

            }


        });

    </script>
</head>
<body>
    <br /><br />
    <h2>User Register</h2><br />
    <img src="../../Photo/userim.jpg" class="img-circle" alt="Cinque Terre" width="60" height="43">
    @if (ViewBag.Message3 != null)
    {
        <p class="msg1">@ViewBag.Message3 Login</p>
    }
    @if (ViewBag.Exception1 != null)
    {
        <p class="msg2">@ViewBag.Exception1</p>
    }

    @using (Html.BeginForm("UserSignupSuccess", "Cafeteria", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    User Name:
                </td>
                <td>
                    <input type="text" id="vname" size=65 name="UserName" required>
                </td>
            </tr>
            <tr>
                <td>
                    <p style="color: white">
                        .
                    </p>
                </td>
                <td>
                    <p id="hide1"></p>
                </td>
            </tr>
            <tr>
                <td>
                    Contact Number:
                </td>
                <td>
                    <input type="text" id="cno" size=65 name="ContactNo" required>
                </td>
            </tr>
            <tr>
                <td>
                    <p style="color: white">
                        .
                    </p>
                </td>
                <td>
                    <p id="hide5"></p>
                </td>
            </tr>
            <tr>
                <td>
                    Email:
                </td>
                <td>
                    <input type="text" id="email" size=65 name="Email" required>
                </td>
            </tr>
            <tr>
                <td>
                    <p style="color: white">
                        .
                    </p>
                </td>
                <td>
                    <p id="hide4"></p>
                </td>
            </tr>
            <tr>
                <td>
                    Password:
                </td>
                <td>
                    <input id="password1" type="password" size=65 name="Pswd" required />
                </td>
            </tr>
            <tr>
                <td>
                    <p style="color: white">
                        .
                    </p>
                </td>
                <td>
                    <p id="validate-status1"></p>
                </td>
            </tr>
            <tr>
                <td>
                    Confirm Password:
                </td>
                <td>
                    <input id="password2" type="password" size=65 required />
                </td>
            </tr>
            <tr>
                <td>
                    <p style="color: white">
                        .
                    </p>
                </td>
                <td>
                    <p id="validate-status"></p>
                </td>
            </tr>
        </table>
        @*<p>User Name:<input type="text" id="vname" size=65 name="UserName" required> </p>
        <p id="hide1"></p><br>*@
        @*<p>
            Contact Number:<input type="text" id="cno" size=65 name="ContactNo" required>
        </p><p id="hide5"></p><br>*@

        @*<p> Email: <input type="text" id="email" size=65 name="Email" required>  </p><p id="hide4"></p><br>

        <div id="pwd">
            <p>Password<input id="password1" type="password" size=65 name="Pswd" required /></p><p id="validate-status1"></p>
            <br />
            <p>Confirm Password<input id="password2" type="password" size=65 required /></p>
            <p id="validate-status"></p>
        </div>
        <br />*@

        <p>
            <input type="submit" id="submit1" value="Register" name="Submit">
            <input type="reset" value="Reset" name="Reset">
            <input type="button" value="Cancel" onclick="@("window.location.href='" + @Url.Action("HomePage", "Cafeteria") + "'");" />
            <input type="button" value="Already Registered?Login" onclick="@("window.location.href='" + @Url.Action("VendorLogin", "Cafeteria") + "'");" />
        </p>
    }
</body>
</html>

