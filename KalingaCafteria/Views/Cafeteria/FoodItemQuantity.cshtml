
@{
    ViewBag.Title = "FoodItemQuantity";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FoodItemQuantity</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            
            $('#qnt').keyup(function () {
                var filter = /^[0-9-+]+$/;
                if ($('#qnt').val() == " " || $('#qnt').val() == "" || filter.test($('#qnt')) || $('#qnt').val().length === 0 || $('#qnt').val() < 0 || $('#qnt').val() >5){
                    //alert('Please complete the field');
                    $("#hide5").text("Enter valid Quantity!");
                    $("#submit1").attr("disabled", true);
                }
                else {
                    $("#hide5").text("");
                    $("#submit1").attr("disabled", false);
                }
            });
                
            });
           
           


        

    </script>
    <style>



        body {
            background-color: black;
            background: url("../../Photo/addm1.jpg") no-repeat center center fixed;
            background-size: cover;
        }

        h2 {
            color: rgb(4, 114, 37);
        }

        .div1 {
            position: center;
        }
    </style>
</head>
<body align="center">
    <br /><br />
    <div align="center">
        <p><h1>Enter Quantity</h1></p>

    </div>
    @using (Html.BeginForm("FoodItemQuantity", "Cafeteria", FormMethod.Post))
    {
        <table cellpadding="1" cellspacing="0" border="0" align="center">
            @*<tr align="center">

                <td align="center">
                    @Html.TextBox("Quantity")

                </td>
            </tr>*@
            <tr>
                
                <td>
                   <input style="opacity:0.5" type="number" id="qnt" size=65 name="Quantity" required> 
                    <p id="hide4"></p><br>
                </td>
            </tr>
            <tr>
                <td>
                    <p> </p>
                </td>
            </tr>
            <tr align="center">

                <td><input type="submit" id="submit1" value="Purchase"class="btn btn-success" align="center" /></td>

            </tr>
        </table>
    }
    
</body>
</html>



